<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:padding="10dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/target"
                android:id="@+id/imagePlaceImageUserReview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />


            <TextView
                android:id="@+id/textViewOptionsUserReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="&#8942;"
                android:textAppearance="?android:textAppearanceLarge" />

            <RatingBar
                android:id="@+id/ratingUserRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style = "?android:attr/ratingBarStyleSmall"
                android:layout_toLeftOf="@+id/textViewOptionsUserReview"
                android:layout_alignParentTop="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textPlaceDescUserReview"
                android:text="Place Description"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_marginLeft="3dp"
                android:layout_below="@+id/textPlaceNameUserReview"
                android:layout_toEndOf="@+id/imagePlaceImageUserReview" />

            <TextView
                android:text="Place Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textPlaceNameUserReview"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/ratingUserRating"
                android:layout_toEndOf="@+id/imagePlaceImageUserReview" />

            <EditText
                android:id="@+id/editUserComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:ems="10"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textPlaceDescUserReview" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
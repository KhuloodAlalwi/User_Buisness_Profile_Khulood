<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/target"
                android:id="@+id/imageViewPlaceImageUserBookmark"
                android:layout_marginStart="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Place Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPlaceNameUserBookmark"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_alignBottom="@+id/textViewOptionsUserBookmark"
                android:layout_alignStart="@+id/textViewPlaceDescUserBookmark" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPlaceDescUserBookmark"
                android:text="Place Description"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_marginLeft="3dp"
                android:layout_below="@+id/textViewPlaceNameUserBookmark"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/imageViewPlaceImageUserBookmark"
                android:layout_centerHorizontal="true" />



            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/bookmark"
                android:id="@+id/imageViewBookmarkImageUser"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingRight="@dimen/activity_horizontal_margin"

                android:layout_above="@+id/textViewPlaceDescUserBookmark" />

            <TextView
                android:id="@+id/textViewOptionsUserBookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="&#8942;"
                android:paddingRight="10dp"
                android:textAppearance="?android:textAppearanceLarge" />






        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>